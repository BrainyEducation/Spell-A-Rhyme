<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterClassroomCodeActivity">

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickExit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="32dp">

            <ImageButton
                android:id="@+id/digit1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/blue_circle" />

            <ImageButton
                android:id="@+id/digit2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/blue_circle" />

            <ImageButton
                android:id="@+id/digit3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/blue_circle" />

            <ImageButton
                android:id="@+id/digit4"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/blue_circle" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="96dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/num1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num1" />

                <ImageView
                    android:id="@+id/num2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num2" />

                <ImageView
                    android:id="@+id/num3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num3" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/num4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num4" />

                <ImageView
                    android:id="@+id/num5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num5" />

                <ImageView
                    android:id="@+id/num6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num6" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/num7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num7" />

                <ImageView
                    android:id="@+id/num8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num8" />

                <ImageView
                    android:id="@+id/num9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num9" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/num0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDigitEntered"
                    app:srcCompat="@drawable/num0" />

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:onClick="onClickDelete"
                    app:srcCompat="@drawable/cancel" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>