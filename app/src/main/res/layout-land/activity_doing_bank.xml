<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankActivity">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/bankLevelLA"
        style="@style/ScrollButton"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:contentDescription="arrowButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:srcCompat="@drawable/button_back" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bankLevelRA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bankLevelLA"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/flyButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="fly"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fly"/>
                <ImageButton
                    android:id="@+id/cutButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="cut"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cut"/>
                <ImageButton
                    android:id="@+id/balanceButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="balance"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/balance"/>
                <ImageButton
                    android:id="@+id/digButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="dig"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dig"/>
                <ImageButton
                    android:id="@+id/hugButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="hug"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hug"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/jumpButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="jump"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/jump"/>
                <ImageButton
                    android:id="@+id/lickButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="lick"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lick"/>
                <ImageButton
                    android:id="@+id/washButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="wash"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wash"/>
                <ImageButton
                    android:id="@+id/yawnButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="yawn"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/yawn"/>
                <ImageButton
                    android:id="@+id/fallButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="fall"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fall"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/hitButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="hit"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hit"/>
                <ImageButton
                    android:id="@+id/fishButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="fish"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fish"/>
                <ImageButton
                    android:id="@+id/singButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="sing"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sing"/>
                <ImageButton
                    android:id="@+id/loveButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="love"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/love"/>
                <ImageButton
                    android:id="@+id/cryButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:contentDescription="cry"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cry"/>


            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/bankLevelRA"
        style="@style/ScrollButton"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:contentDescription="arrowButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:srcCompat="@drawable/button_forward" />

</android.support.constraint.ConstraintLayout>