<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <include
            android:id="@+id/actionBar"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageButton
                        android:id="@+id/boyButton"
                        android:layout_width="100dp"
                        android:layout_height="119dp"
                        app:srcCompat="@drawable/boy_bw" />

                    <ImageButton
                        android:id="@+id/bubbleButton"
                        android:layout_width="100dp"
                        android:layout_height="113dp"
                        app:srcCompat="@drawable/bubble_bw" />

                    <ImageButton
                        android:id="@+id/cowButton"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cow_bw" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cutButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/cut_bw" />

                    <ImageButton
                        android:id="@+id/balanceButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/balance_bw" />

                    <ImageButton
                        android:id="@+id/fridgeButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/fridge_bw" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/leafButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/leaf_bw" />

                    <ImageButton
                        android:id="@+id/kingButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/king_bw" />

                    <ImageButton
                        android:id="@+id/volcanoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/volcano_bw" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>